<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard1.3</TargetFramework>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <PackageId>Crest.Analyzers</PackageId>
    <Description>Allows the analyzing of routes inside a project that uses the Crest framework.</Description>
    <PackageTags>Crest, analyzers</PackageTags>
    <LangVersion>Latest</LangVersion>
  </PropertyGroup>

  <Import Project="..\..\src\CrestPackage.targets" />

  <ItemGroup>
    <Folder Include="Crest.Host\" />
    <Compile Include="..\..\src\Crest.Host\Routing\UrlParser.cs" Link="Crest.Host\UrlParser.cs" />
    <Compile Include="..\..\src\Crest.Host\Routing\UrlParser.ParameterData.cs" Link="Crest.Host\UrlParser.ParameterData.cs" />
    <Compile Include="..\..\src\Crest.Host\Routing\UrlParser.SegmentParser.cs" Link="Crest.Host\UrlParser.SegmentParser.cs" />
  </ItemGroup>
   
  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp.Workspaces" Version="2.8.2" PrivateAssets="all" />
    <PackageReference Include="System.Memory" Version="4.5.1" />
    <PackageReference Update="NETStandard.Library" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <None Update="tools\*.ps1" CopyToOutputDirectory="Always" Pack="true" PackagePath="" />
    <None Include="$(OutputPath)\$(AssemblyName).dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
  </ItemGroup>

</Project>
